<table border="1" style="width:500px">
  <thead>
  <tr>
    <td>
      <b>
        Title
      </b>
    </td>
    <td>
      <b>
        Author
      </b>
    </td>
  </tr>
  </thead>
  <tr>
    <% Book.read.each do |book| %>
      <tr style="border:1px solid black;">
        <td>
          <%= book["title"] %>
        </td>
        <td>
          <%= book["author"] %>
        </td>
      </tr>
    <% end %>
    </tr>
</table>
